<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/linLay1"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="20dp"
        card_view:cardElevation="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linLay2">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id="@+id/nomorSoal"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:textSize="16sp"
                    android:gravity="center|left"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:text="20"/>
                <WebView
                    android:layout_toRightOf="@id/nomorSoal"
                    android:id="@+id/tvSoals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="asdasdasdas"
                    android:textSize="16sp"
                    android:paddingTop="16dp"
                    />
                <ImageView
                    android:layout_below="@id/tvSoals"
                    android:id="@+id/ivSoals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="250dp"
                    />
                <WebView
                    android:layout_toRightOf="@id/nomorSoal"
                    android:layout_below="@id/ivSoals"
                    android:id="@+id/tvSoals2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:paddingBottom="16dp"
                    />
            </RelativeLayout>


            <RadioGroup
                android:id="@+id/rgOptions"
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton
                    android:layout_marginBottom="16dp"
                    android:id="@+id/rbOpsiA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18sp"/>
                <RadioButton
                    android:layout_marginBottom="16dp"
                    android:id="@+id/rbOpsiB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B."
                    android:textSize="18sp"/>
                <RadioButton
                    android:layout_marginBottom="16dp"
                    android:id="@+id/rbOpsiC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C."
                    android:textSize="18sp"/>
                <RadioButton
                    android:id="@+id/rbOpsiD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D."
                    android:textSize="18sp"/>
            </RadioGroup>

            <TextView
                android:id="@+id/tvAlasan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="Alasan"
                android:textSize="18sp"/>

            <RadioGroup
                android:id="@+id/rgReasons"
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton
                    android:layout_marginBottom="16dp"
                    android:id="@+id/rbReasonA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I."
                    android:textSize="18sp"/>
                <RadioButton
                    android:layout_marginBottom="16dp"
                    android:id="@+id/rbReasonB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="II."
                    android:textSize="18sp"/>
                <RadioButton
                    android:layout_marginBottom="16dp"
                    android:id="@+id/rbReasonC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="III."
                    android:textSize="18sp"/>
                <RadioButton
                    android:id="@+id/rbReasonD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="IV."
                    android:textSize="18sp"/>
            </RadioGroup>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>