<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.p_code.diagnostictest.RegisterActivity"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ic_unnes_notext">
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ico_nama"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_account_box_white"/>
        <EditText
            android:id="@+id/nama_box"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ico_nama"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:background="@android:color/white"
            android:hint="Nama"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:inputType="text"
            android:textColorHint="@color/colorSecondaryText"
            android:textSize="15sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="250dp"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/ico_nisn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_credit_card_white"/>
        <EditText
            android:id="@+id/nisn_box"
            android:layout_toRightOf="@id/ico_nisn"
            android:layout_marginLeft="10dp"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:hint="NISN"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:inputType="numberSigned"
            android:textSize="15sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="250dp"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/ico_password"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_lock_white"/>
        <EditText
            android:id="@+id/password_box"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ico_password"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:textSize="15sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginBottom="25dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="250dp"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/ico_confirm"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_lock_outline_white"/>
        <EditText
            android:id="@+id/confirm_box"
            android:layout_toRightOf="@id/ico_confirm"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:background="@android:color/white"
            android:hint="Password Confirm"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:inputType="textPassword"/>
    </RelativeLayout>

    <Button
        android:id="@+id/signup_btn"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="sign up"/>

    <ProgressBar
        android:id="@+id/login_progress"
        android:layout_gravity="center_horizontal"
        android:layout_width="25dp"
        android:layout_height="25dp" />

</LinearLayout>
