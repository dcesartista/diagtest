<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/classroom"
    tools:context="com.example.p_code.diagnostictest.RegisterActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/overlay_light"/>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_gravity="center"
        android:layout_height="500dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:background="@drawable/overlay">

        <RelativeLayout
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ic_unnes_notext">
        </RelativeLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ico_nama"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:src="@drawable/ic_account_box_white"
                android:background="@color/colorAccent"
                android:padding="3dp"/>
            <EditText
                android:id="@+id/nama_box"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:hint="Nama"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:inputType="text"
                android:textColorHint="@color/colorSecondaryText"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ico_nisn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:src="@drawable/ic_credit_card_white"
                android:background="@color/colorAccent"
                android:padding="3dp"/>
            <EditText
                android:id="@+id/nisn_box"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:hint="NISN"
                android:padding="10dp"
                android:inputType="numberSigned"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ico_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:src="@drawable/ic_lock_white"
                android:background="@color/colorAccent"
                android:padding="3dp"/>
            <EditText
                android:id="@+id/password_box"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ico_confirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:src="@drawable/ic_lock_outline_white"
                android:background="@color/colorAccent"
                android:padding="3dp"/>
            <EditText
                android:id="@+id/confirm_box"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:hint="Confirm Password"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:inputType="textPassword"
                />
        </LinearLayout>

        <Button
            android:id="@+id/signup_btn"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:text="sign up"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_rectangle_white_accent"/>

        <ProgressBar
            android:id="@+id/login_progress"
            android:layout_gravity="center_horizontal"
            android:layout_width="25dp"
            android:layout_height="25dp" />

    </LinearLayout>

</FrameLayout>
