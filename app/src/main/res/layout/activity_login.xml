<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/classroom">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/overlay_light"/>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_gravity="center"
        android:layout_height="500dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.p_code.diagnostictest.LoginActivity"
        android:orientation="vertical"
        android:background="@drawable/overlay">


        <ImageView
            android:layout_marginTop="25dp"
            android:layout_marginBottom="30dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_unnes_notext">
        </ImageView>

        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ico_nisn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:src="@drawable/ic_credit_card_white"

                />
            <EditText
                android:id="@+id/nisn_box"
                android:layout_toRightOf="@id/ico_nisn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:inputType="numberSigned"
                android:layout_centerVertical="true"
                android:hint="NISN"
                android:padding="10dp"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="250dp"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/ico_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:src="@drawable/ic_lock_white"/>
            <EditText
                android:id="@+id/password_box"
                android:layout_toRightOf="@id/ico_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:inputType="textPassword"
                android:layout_centerVertical="true"
                android:hint="Password"
                android:textSize="15sp"
                android:padding="10dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/login_btn"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:text="login"
            android:textSize="16sp"
            android:background="@drawable/rounded_rectangle_white"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doesn't have an account?"
            android:textSize="18sp"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/signup_btn"
            android:layout_gravity="center_horizontal"
            android:layout_width="175dp"
            android:layout_height="30dp"
            android:text="Tap here to Sign Up"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"/>

        <ProgressBar
            android:id="@+id/login_progress"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="25dp"
            android:layout_height="25dp" />

    </LinearLayout>



</FrameLayout>
