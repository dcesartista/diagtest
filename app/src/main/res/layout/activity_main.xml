<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.p_code.diagnostictest.MainActivity"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/logo_unnes"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_unnes_notext"
        android:layout_centerHorizontal="true"
        android:layout_margin="50dp"/>

    <Button
        android:id="@+id/materi_btn"
        android:layout_marginBottom="15dp"
        android:layout_below="@id/logo_unnes"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:text="materi"/>

    <Button
        android:id="@+id/soal_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/materi_btn"
        android:layout_centerHorizontal="true"
        android:text="soal"/>

    <TextView
        android:id="@+id/nama_text"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:text="nama"
        android:textSize="18sp"
        android:layout_below="@id/soal_btn"
        android:layout_marginTop="25dp"/>
</RelativeLayout>
